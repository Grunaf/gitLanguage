<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SetLanguage">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="23dp"
        android:gravity="center"
        android:text="Выберите язык"
        android:textSize="40sp"
        tools:layout_editor_absoluteX="180dp"
        tools:layout_editor_absoluteY="116dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="621dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="0dp">

        <Button
            android:id="@+id/laksky"
            android:layout_width="208dp"
            android:layout_height="97dp"
            android:layout_above="@+id/lezgi"
            android:layout_alignEnd="@+id/lezgi"
            android:layout_alignRight="@+id/lezgi"
            android:layout_marginEnd="0dp"
            android:layout_marginRight="0dp"
            android:layout_marginBottom="28dp"
            android:onClick="onClickBtn"
            android:text="Лакский"
            android:textSize="19sp" />

        <Button
            android:id="@+id/lezgi"
            android:layout_width="208dp"
            android:layout_height="97dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="102dp"
            android:layout_marginRight="102dp"
            android:layout_marginBottom="152dp"
            android:onClick="onClickBtn"
            android:text="Лезгинский"
            android:textSize="19sp" />

        <Button
            android:id="@+id/avar"
            android:layout_width="208dp"
            android:layout_height="97dp"
            android:layout_above="@+id/laksky"
            android:layout_alignEnd="@+id/lezgi"
            android:layout_alignRight="@+id/lezgi"
            android:layout_marginEnd="1dp"
            android:layout_marginRight="1dp"
            android:layout_marginBottom="47dp"
            android:onClick="onClickBtn"
            android:text="Аварский"
            android:textSize="19sp" />
    </RelativeLayout>

</RelativeLayout>